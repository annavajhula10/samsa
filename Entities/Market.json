{
  "name": "Market",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the prediction market"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the event"
    },
    "category": {
      "type": "string",
      "enum": [
        "politics",
        "sports",
        "finance",
        "technology",
        "entertainment",
        "crypto",
        "other"
      ],
      "description": "Category of the market"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "closed",
        "resolved"
      ],
      "default": "active",
      "description": "Current status of the market"
    },
    "close_date": {
      "type": "string",
      "format": "date-time",
      "description": "When the market closes for predictions"
    },
    "resolution_date": {
      "type": "string",
      "format": "date-time",
      "description": "When the market will be resolved"
    },
    "outcomes": {
      "type": "array",
      "description": "Possible outcomes for the market",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "probability": {
            "type": "number",
            "description": "Current probability/odds (0-100)"
          },
          "total_stake": {
            "type": "number",
            "default": 0,
            "description": "Total amount staked on this outcome"
          }
        }
      }
    },
    "total_volume": {
      "type": "number",
      "default": 0,
      "description": "Total volume across all outcomes"
    },
    "image_url": {
      "type": "string",
      "description": "Featured image for the market"
    },
    "winning_outcome_id": {
      "type": "string",
      "description": "ID of the winning outcome (set when resolved)"
    },
    "search_keywords": {
      "type": "string",
      "description": "Keywords for news/stats lookup"
    }
  },
  "required": [
    "title",
    "description",
    "category",
    "outcomes"
  ]
}